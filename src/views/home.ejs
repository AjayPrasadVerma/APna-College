            <script>

                const err = document.getElementById("error");
                const serErr = '<%= logmessage %>';

                if (serErr) {

                    err.style.backgroundColor = "#F2DEDE";
                    err.innerText = serErr;
                }
                else {
                    err.style.backgroundColor = "";
                    err.innerText = "";
                }

                // image silde start

                setInterval(autoSlide, 2000);

                function autoSlide() {
                    controller(1);
                }

                let flag1 = 0;

                function controller(x) {
                    flag1 = flag1 + x;
                    slideImage(flag1);
                }

                function slideImage(num) {
                    let slides = document.getElementsByClassName("slide");

                    if (num == slides.length) {
                        num = 0;
                        flag1 = 0;
                    }

                    if (flag1 < 0) {
                        num = slides.length - 1;
                        flag1 = slides.length - 1;
                    }

                    for (x of slides) {
                        x.style.display = "none";
                    }

                    slides[num].style.display = "block";
                }
                slideImage(flag1);
            // image silde end

            </script>

