        }

        const startDate = '<%= start %>';
        const startDateTime = new Date(startDate);
        const start = startDateTime.toISOString().slice(0, 16); // format as yyyy-MM-ddThh:mm


        const endDate = '<%= end %>';
        const endDateTime = new Date(endDate);
        const end = endDateTime.toISOString().slice(0, 16); // format as yyyy-MM-ddThh:mm
        console.log(start);
        console.log(end);


        document.getElementById("from").value = start;
        document.getElementById("to").value = end;


        function validateForm() {

            let x, y, i, valid = true;

            x = document.getElementsByTagName("input");
            y = document.getElementsByTagName("textarea");
            let allField = [...x, ...y];

            for (i = 0; i < allField.length; i++) {

                if (allField[i].value == "") {
                    allField[i].className += " invalid";
                    valid = false;
                }
            }

            return (valid) ? true : false;
        }

        function handleSubmit() {
            if (validateForm()) {
                alert("Application Successfully Updated!");
                preventDefault();
                return true;
            } else {
                return false;
            }
        }


    </script>
