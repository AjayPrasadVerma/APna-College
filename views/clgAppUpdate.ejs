    <%- include('./partials/header'); %>
        <style>
            .app-info>input {
                width: 30px;
                padding: 5px;
            }

            .app-info1 {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 15px;
            }

            .address-sec {
                margin-top: 10px;
                display: none;
            }

            textarea {
                text-transform: none;
            }

            .course {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                align-items: center;
            }

            @media(max-width: 941px) {
                .course {
                    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                }
            }

            @media(max-width: 941px) {
                .app-info1 {
                    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                }
            }

            .commerce {
                display: grid;
                grid-template-columns: repeat(3, 2fr);
                align-items: center;
                grid-row-gap: 10px
            }

            @media(max-width: 932px) {
                .commerce {
                    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                }
            }

            .language {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                align-items: center;
                gap: 10px;
            }

            .chemistry {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                align-items: center;
                gap: 10px;
            }

            .cs {
                display: grid;
                grid-template-columns: 2fr 2fr 1fr 1fr;
                align-items: center;
                grid-row-gap: 10px;
                gap: 10px;
            }

            .math {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                align-items: center;
                gap: 10px;
            }

            @media(max-width: 938px) {

                .language,
                .chemistry,
                .cs,
                .math {
                    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                }
            }
        </style>
