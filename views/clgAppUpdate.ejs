        const tab2 = document.querySelector(".tab-2");


        if (courset1.checked) {
            tab1.style.display = 'block'; // show the element
        } else {
            tab1.style.display = 'none'; // hide the element
        }



        if (courset2.checked) {
            tab2.style.display = 'block'; // show the element
        } else {
